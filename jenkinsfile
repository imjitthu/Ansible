pipeline {
    agent any

    parameters {
    
        choice(name: 'Ansible', choices: ['create_instances', 'make_inventory', 'invoke_playbook'], description: 'Pick any action')

    }

    stages {
        stage ('Creating Instances') {
            steps {
                sh "sh instances.sh launch"
                sh "sh instances.sh routes"
            }
        }
        stage ('Make Inventory') {
            steps {
                sh "sh mkinv.sh"
            }
        }
        stage ('Run Palybook') {
            steps {
                ansible-palybook -i /tmp/inv roboshop.yml 
            }
        }
    }


}